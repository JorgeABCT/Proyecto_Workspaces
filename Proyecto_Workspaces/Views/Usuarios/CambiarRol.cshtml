@model Proyecto_Workspaces.Models.ApplicationUser

@{
    ViewBag.Title = "Agregar";
}

<h2 class="mb-4">Cambiar Rol de Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Formulario para Cambiar Rol</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.UserName, "Nombre del Usuario", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <br />
                @Html.DisplayFor(model => model.UserName)
            </div>

            <div class="mb-3">
                <label class="control-label col-md-2 fw-bold">Nombre Real del Usuario</label>
                <p>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.PrimerApellido) @Html.DisplayFor(model => model.SegundoApellido)</p>
            </div>

            <div class="mb-3">
                @Html.DropDownList("ID_Roles", null, htmlAttributes: new { @class = "form-control" })
            </div>

        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Cambiar Rol
            </button>
            @Html.ActionLink("Volver al Listado", "Index", new { area = "" }, new { @class = "btn btn-secondary ms-2" })
        </div>
    </div>
}
