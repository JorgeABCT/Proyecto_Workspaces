@{
    ViewBag.Title = "Estadísticas";
}

<h2>Estadisticas</h2>
<div class="row">
    <div class="card col-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Horas mas comunes</h5>
            <p class="card-text">La hora más común de para hacer una reserva es @ViewBag.HorasMasComunes.</p>
        </div>
    </div>

    <div class="col-1"></div>

    <div class="card col-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Salas mas reservadas</h5>
            <p class="card-text">La sala @ViewBag.SalasMasReservadaNombre (@ViewBag.SalasMasReservadaID) es la sala más común en ser reservada.</p>
        </div>
    </div>

    <div class="col-1"></div>

    <div class="card col-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Usuarios con mas reservaciones</h5>
            <p class="card-text">
                El usuario @ViewBag.UsuariosMasReservaciones ha creado la mayor cantidad de reservas.
            </p>
        </div>
    </div>

    <div class="col-1"></div>

</div>
<br />
<div class="row">
    <div class="col-3 me-5"></div>
    <div class="card col-2" style="width: 20rem;">
        <div class="card-body">
            <h5 class="card-title">Fechas con más reservas</h5>
            <p class="card-text">
                @foreach (var item in ViewBag.ReservasPorDia)
                    {
                        @item.Fecha.Date.ToString("dd/MM/yyyy")
                        <br />
                    }
            </p>
        </div>
    </div>
</div>
