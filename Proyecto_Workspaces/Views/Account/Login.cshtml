@using Proyecto_Workspaces.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

@section Styles {
    @Styles.Render("~/Content/InicioS")
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form", id = "formIniciarSesion" }))
                    {
                        @Html.AntiForgeryToken()
                        <h3 class="mb-3 text-center">Iniciar sesión</h3>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Nombre de usuario -->
                        <div class="form-floating">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "nombreUsuario" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <!-- Contraseña -->
                        <div class="form-floating">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <!-- Olvidaste contraseña -->
                        <a class="text-decoration-none text-dark" href="@Url.Action("ForgotPassword", "Account")">¿Olvidaste tu contraseña?</a>
                        <br>

                        <!-- Botón iniciar sesión -->
                        <button id="iniciarSesionBtn" class="w-100 btn btn-outline-dark" type="submit">Iniciar sesión</button>
                        <br>

                        <!-- Enlace para registrarse -->
                        <a class="text-decoration-none text-dark" href="@Url.Action("Register", "Account")">¿No tienes una cuenta? Regístrate</a>
                    }
                </section>
            </div>
            <div class="col-md-4">
                <!-- Sección para inicio de sesión social (si se necesita) -->
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
        </div>
    </div>


</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}